<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical"
        android:gravity="center">
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#000000"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="未上传记录"
            android:textColor="#eefb05"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/business_send_number_count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:gravity="left"
            android:text="0票"
            android:textColor="#eefb05"
            android:textSize="24dp" />
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/yetongbutton"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_button_selector"
                android:onClick="onclick"
                android:text="业绩统计" />

            <Button
                android:id="@+id/fascanbutton"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/yetongbutton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_button_selector"
                android:onClick="onclick"
                android:text="发件扫描" />

            <Button
                android:id="@+id/daoscanbutton"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/fascanbutton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_button_selector"
                android:onClick="onclick"
                android:text="到件扫描" />

            <Button
                android:id="@+id/jiscanbutton"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/daoscanbutton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_button_selector"
                android:onClick="onclick"
                android:text="集包扫描" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/businessback_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_button_selector"
                android:onClick="onclick"
                android:text="返回" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>