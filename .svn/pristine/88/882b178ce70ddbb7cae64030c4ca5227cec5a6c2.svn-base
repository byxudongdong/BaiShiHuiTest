<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#000000">
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#000000"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="未上传记录"
            android:textColor="#eefb05"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/businessselect_send_number_count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:gravity="left"
            android:text="0票"
            android:textColor="#eefb05"
            android:textSize="24dp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:layout_centerHorizontal="true"
    
        >

        <Button
            android:onClick="onclick"
            android:id="@+id/yetongselectbutton"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_button_selector"
            android:text="业绩统计查询" />

        <Button
            android:onClick="onclick"
            android:id="@+id/faselectbutton"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/yetongselectbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button_selector"
            android:text="发件统计" />
         <Button
            android:onClick="onclick"
            android:id="@+id/daoselectbutton"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/faselectbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button_selector"
            android:text="到件统计" />
         <Button
            android:onClick="onclick"
            android:id="@+id/jiselectbutton"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/daoselectbutton"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button_selector"
            android:text="集包统计" />

        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        >
       <Button
            android:onClick="onclick"
            android:id="@+id/selectback_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_button_selector"
            android:text="返回" />
    </RelativeLayout>
 </LinearLayout>
</ScrollView>